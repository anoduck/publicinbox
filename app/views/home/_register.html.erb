<section id="register">
  <header>
    <h1>Register</h1>
  </header>

  <%= form_for(@user, :url => register_path) do |f| -%>
    <div class="field">
      <%= f.label(:user_name) %>
      <%= f.text_field(:user_name) %>
    </div>

    <div class="field">
      <%= f.label(:real_name) %>
      <%= f.text_field(:real_name) %>
    </div>

    <div class="field">
      <%= f.label(:password) %>
      <%= f.password_field(:password) %>
    </div>

    <div class="field">
      <%= f.label(:password_confirmation) %>
      <%= f.password_field(:password_confirmation) %>
    </div>

    <div class="field">
      <%= f.submit('Register') %>
    </div>

    <div class="field">
      <p>Already have an account? <%= link_to('Log in', '#login') %>!</p>
    </div>
  <% end -%>
</section>
