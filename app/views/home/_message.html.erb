<section id="message" data-title="Message" ng-show="isActiveSection('message')">
  <h2>
    <span class="subject">{{message.subject}}</span>
    <small><%= link_to('Back', '#{{message.section}}') %></small>
  </h2>

  <div ng-bind-html="message.body"></div>

  <p>
    <button ng-click="replyToMessage(message)">Reply</button>
    <button class="delete" ng-click="deleteMessage(message)">Delete</button>
  </p>
</section>
