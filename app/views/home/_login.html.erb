<section id="login" data-title="Log In" ng-show="isActiveSection('login')">
  <%= form_for(@user, :url => login_path) do |f| -%>
    <div class="field">
      <%= f.label(:user_name) %>
      <%= f.text_field(:user_name) %>
    </div>

    <div class="field">
      <%= f.label(:password) %>
      <%= f.password_field(:password) %>
    </div>

    <div class="field">
      <%= f.submit('Log in') %> or <%= link_to('Register', '#register') %>
    </div>
  <% end -%>

  <p>Or log in through:</p>

  <p>
    <%= link_to('Google', '/auth/google_oauth2') %>
    <%= link_to('Facebook', '/auth/facebook') %>
    <%= link_to('Twitter', '/auth/twitter') %>
  </p>
</section>
