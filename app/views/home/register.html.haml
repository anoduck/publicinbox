= form_for(@user, :url => register_path) do |f|
  %fieldset
    %legend Register

    .field
      = f.label(:user_name)
      = f.text_field(:user_name)

    .field
      = f.label(:real_name)
      = f.text_field(:real_name)

    .field
      = f.label(:password)
      = f.password_field(:password)

    .field
      = f.label(:password_confirmation)
      = f.password_field(:password_confirmation)

    .field
      = f.submit('Register')
