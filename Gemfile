source 'https://rubygems.org'

ruby '2.0.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.0.beta1'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0.rc1'

# Use Font Awesome for icons
gem 'font-awesome-sass'

# Use HAML for (some) layouts
gem 'haml-rails'

# Allow e-mails to be formatted using Markdown
gem 'redcarpet'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use RestClient for sending e-mail via Mailgun's HTTP API
gem 'rest-client'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# Whitespace is teh sux
gem 'strip_attributes'

# All aboard the Gravatar bandwagon!
gem 'gravatar_image_tag'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', :group => :doc, :require => false

# Spring speeds up development by keeping your application running in the background. Read more: https://github.com/jonleighton/spring
gem 'spring', :group => :development

# Good ol' rspec
gem 'rspec-rails', :group => [:development, :test]

# Use rails_12factor gem for production
gem 'rails_12factor', :group => :production

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.1.2'

# Use thin as the app server (necessary for using faye)
gem 'thin'

# Websockets!
# Currently I need to use @nilbus's fork for Rails >= 4
gem 'faye-rails', :github => 'nilbus/faye-rails'
